{
  "name": "eleventy-tailwind-githubpages-template",
  "version": "1.0.0",
  "description": "Eleventy + Tailwind CSS + GitHub Pages + Custom Domain Template",
  "scripts": {
    "build:css": "npx tailwindcss -i src/assets/styles.css -o src/assets/styles.generated.css",
    "build": "npm run build:css && eleventy",
    "start": "npm-run-all --parallel watch:css serve",
    "watch:css": "npx tailwindcss -i src/assets/styles.css -o src/assets/styles.generated.css --watch",
    "serve": "eleventy --serve"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "autoprefixer": "^10.0.0",
    "baseline-browser-mapping": "^2.9.11",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.0.0",
    "postcss-cli": "^10.0.0",
    "tailwindcss": "^4.1.18"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.18"
  }
}
